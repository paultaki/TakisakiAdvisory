{
  "redirects": [
    {
      "source": "/index.html",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/(.*)/index.html",
      "destination": "/$1/",
      "permanent": true
    },
    {
      "source": "/about",
      "destination": "/about.html",
      "permanent": true
    },
    {
      "source": "/articles/strategic-failure.html",
      "destination": "/insights/strategy.html",
      "permanent": true
    },
    {
      "source": "/insights/wrong-plane-right-destination",
      "destination": "/insights/wrong-plane.html",
      "permanent": true
    },
    {
      "source": "/leadership-accelerator",
      "destination": "/leadership-accelerator.html",
      "permanent": true
    },
    {
      "source": "/blogs/index.html",
      "destination": "/insights/Insights.html",
      "permanent": true
    },
    {
      "source": "/blogs/(.*)",
      "destination": "/insights/$1",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "has": [
        {
          "type": "host",
          "value": "paultakisaki.com"
        }
      ],
      "destination": "https://www.paultakisaki.com/$1"
    }
  ]
}
